{
  "extends": ["tslint-config-standard"],
  "env": {
    "node": true
  },
  "linterOptions": {
    "exclude": [
      "dist/**",
      "lib/**",
      "__tests__/**"
    ]
  },
  "rules": {
    "indent": [true, "spaces"],
    "ter-indent": [true, 2],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "ignore"
    }],
    "semicolon": [true, "always"],
    "no-unused-variable": null,
    "ordered-imports": true,
    "no-empty": true
  },
  "jsRules": {
    "no-empty": true,
    "semicolon": [true, "always"]
  }
}
