<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Zephyr" parent="Theme.Zephyr.Base"/>

    <style name="Theme.Zephyr.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSecondary">@color/primaryDark</item>
        <item name="colorSecondaryVariant">@color/primaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/zephyr_blue</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="windowBackground">@color/zephyr_blue</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="navigationViewStyle">@style/NavigationView</item>
        <item name="appBarLayoutStyle">@style/AppBar</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
        <item name="borderlessButtonStyle">@style/BorderlessButton</item>
        <item name="textInputStyle">@style/Widget.Zephyr.TextInputLayout</item>
    </style>

    <style name="Theme.Zephyr.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/zephyr_blue</item>
        <item name="android:navigationBarColor">@color/zephyr_blue</item>
    </style>

    <style name="Theme.Zephyr.BottomSheetDialog" parent="Theme.Zephyr.BottomSheetDialog.Base"/>

    <style name="Theme.Zephyr.BottomSheetDialog.Base" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="navigationViewStyle">@style/NavigationView</item>
    </style>
</resources>