<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialog.ButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/MaterialAlertDialog.ButtonStyle</item>
    </style>

    <style name="MaterialAlertDialog.ButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/primary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BottomSheetEntryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EEEEEE</item>
    </style>

    <style name="ZephyrHeader">
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ZephyrHeaderSmall">
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BorderlessButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accent</item>
        <item name="rippleColor">@color/accent_ripple</item>
    </style>

    <!-- ZephyrCard -->
    <style name="ZephyrCard"/>

    <style name="ZephyrCard.Default" parent="ZephyrCard">
        <item name="cardColor">@color/white</item>
    </style>

    <style name="ZephyrCard.Info" parent="ZephyrCard">
        <item name="cardColor">@color/accent</item>
    </style>

    <style name="ZephyrCard.Success" parent="ZephyrCard">
        <item name="cardColor">@color/green</item>
    </style>

    <style name="ZephyrCard.Warning" parent="ZephyrCard">
        <item name="cardColor">@color/orange</item>
    </style>

    <style name="ZephyrCard.Error" parent="ZephyrCard">
        <item name="cardColor">@color/red</item>
    </style>

</resources>