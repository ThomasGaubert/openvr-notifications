<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Zephyr" parent="Theme.Zephyr.Base">
        <!-- API 29 specific: transparent nav and status bars -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Zephyr.BottomSheetDialog" parent="Theme.Zephyr.BottomSheetDialog.Base">
        <!-- API 29 specific: color matched navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>